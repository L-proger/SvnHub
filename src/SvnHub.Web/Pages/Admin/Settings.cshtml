@page
@model SvnHub.Web.Pages.Admin.SettingsModel
@{
    ViewData["Title"] = "Settings";
}

<h1>Server settings</h1>

@if (!string.IsNullOrWhiteSpace(Model.Error))
{
    <div class="alert alert-danger">@Model.Error</div>
}

@if (!string.IsNullOrWhiteSpace(Model.Success))
{
    <div class="alert alert-success">@Model.Success</div>
}

<form method="post" class="mt-3" autocomplete="off">
    <div class="mb-3">
        <label asp-for="Input.RepositoriesRootPath" class="form-label"></label>
        <input asp-for="Input.RepositoriesRootPath" class="form-control" />
        <div class="form-text">Used when creating new repositories.</div>
        <span asp-validation-for="Input.RepositoriesRootPath" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Input.SvnBaseUrl" class="form-label"></label>
        <input asp-for="Input.SvnBaseUrl" class="form-control" placeholder="https://svn.example.com/svn" />
        <div class="form-text">Used to build "Copy SVN URL" links for files and folders. Leave empty to disable.</div>
        <span asp-validation-for="Input.SvnBaseUrl" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Input.DefaultAuthenticatedAccess" class="form-label"></label>
        <select asp-for="Input.DefaultAuthenticatedAccess" class="form-select">
            <option value="None">None (private / allow-list)</option>
            <option value="Read">Read</option>
            <option value="Write">Write</option>
        </select>
        <div class="form-text">Controls the default authz rule for <code>$authenticated</code> at repository root (unless overridden per-repo).</div>
        <span asp-validation-for="Input.DefaultAuthenticatedAccess" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Input.MaxUploadMegabytes" class="form-label"></label>
        <input asp-for="Input.MaxUploadMegabytes" type="number" min="1" max="2048" class="form-control" />
        <div class="form-text">Maximum allowed upload size for the web UI (affects Upload).</div>
        <span asp-validation-for="Input.MaxUploadMegabytes" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input asp-for="Input.CreateIfMissing" class="form-check-input" />
        <label asp-for="Input.CreateIfMissing" class="form-check-label"></label>
    </div>

    <button class="btn btn-primary" type="submit">Save</button>
</form>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
