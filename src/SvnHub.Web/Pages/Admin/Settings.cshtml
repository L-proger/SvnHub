@page
@model SvnHub.Web.Pages.Admin.SettingsModel
@{
    ViewData["Title"] = "Settings";
}

<h1>Server settings</h1>

@if (!string.IsNullOrWhiteSpace(Model.Error))
{
    <div class="alert alert-danger">@Model.Error</div>
}

@if (!string.IsNullOrWhiteSpace(Model.Success))
{
    <div class="alert alert-success">@Model.Success</div>
}

<form method="post" class="mt-3" autocomplete="off">
    <div class="mb-3">
        <label asp-for="Input.RepositoriesRootPath" class="form-label"></label>
        <input asp-for="Input.RepositoriesRootPath" class="form-control" />
        <div class="form-text">Used when creating new repositories.</div>
        <span asp-validation-for="Input.RepositoriesRootPath" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input asp-for="Input.CreateIfMissing" class="form-check-input" />
        <label asp-for="Input.CreateIfMissing" class="form-check-label"></label>
    </div>

    <button class="btn btn-primary" type="submit">Save</button>
</form>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}

