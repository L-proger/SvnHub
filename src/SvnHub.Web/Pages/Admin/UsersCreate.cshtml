@page "/admin/users/create"
@model SvnHub.Web.Pages.Admin.UsersCreateModel
@{
    ViewData["Title"] = "Create user";
}

<h1>Create user</h1>

@if (!string.IsNullOrWhiteSpace(Model.Error))
{
    <div class="alert alert-danger mt-3">@Model.Error</div>
}

<form method="post" class="mt-3" autocomplete="off">
    <div class="row">
        <div class="col-md-4 mb-3">
            <label asp-for="Input.UserName" class="form-label"></label>
            <input asp-for="Input.UserName" class="form-control" />
            <span asp-validation-for="Input.UserName" class="text-danger"></span>
        </div>
        <div class="col-md-4 mb-3">
            <label asp-for="Input.Password" class="form-label"></label>
            <input asp-for="Input.Password" type="password" class="form-control" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="col-md-4 mb-3">
            <label class="form-label">Roles</label>
            <div class="d-flex flex-wrap gap-3">
                <div class="form-check">
                    <input asp-for="Input.AdminRepo" class="form-check-input" />
                    <label asp-for="Input.AdminRepo" class="form-check-label"></label>
                </div>
                <div class="form-check">
                    <input asp-for="Input.AdminSystem" class="form-check-input" />
                    <label asp-for="Input.AdminSystem" class="form-check-label"></label>
                </div>
                <div class="form-check">
                    <input asp-for="Input.AdminHooks" class="form-check-input" />
                    <label asp-for="Input.AdminHooks" class="form-check-label"></label>
                </div>
            </div>
            <div class="form-text">Leave all unchecked for a regular user.</div>
        </div>
        <div class="col-md-2 mb-3 d-flex align-items-end">
            <button class="btn btn-primary w-100" type="submit">Create</button>
        </div>
    </div>

    <a class="btn btn-outline-secondary" asp-page="/Admin/Users">Cancel</a>
</form>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
