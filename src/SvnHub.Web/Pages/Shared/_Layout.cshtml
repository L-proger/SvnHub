<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SvnHub</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SvnHub.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/theme.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/code.css" asp-append-version="true" />
    @await RenderSectionAsync("Head", required: false)
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-body-tertiary border-bottom mb-3">
        <div class="container">
            @if (User?.Identity?.IsAuthenticated ?? false)
            {
                <a class="navbar-brand" asp-area="" asp-page="/Repos/Index">SvnHub</a>
            }
            else
            {
                <a class="navbar-brand" asp-area="" asp-page="/Index">SvnHub</a>
            }
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    @if (User?.Identity?.IsAuthenticated ?? false)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Repos/Index">Repos</a>
                        </li>
                    }
                    @if (User?.IsInRole("AdminSystem") ?? false)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Admin/Users">Users</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Admin/Settings">Settings</a>
                        </li>
                    }
                    @if (User?.IsInRole("AdminRepo") ?? false)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Admin/Groups">Groups</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Admin/Permissions">Permissions</a>
                        </li>
                    }
                </ul>
                <ul class="navbar-nav">
                    @if (User?.Identity?.IsAuthenticated ?? false)
                    {
                        <li class="nav-item">
                            <span class="navbar-text me-2">@User.Identity!.Name</span>
                        </li>
                        <li class="nav-item">
                            <form method="post" asp-page="/Logout" class="d-inline">
                                <button type="submit" class="btn btn-link nav-link">Logout</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Login">Login</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2026 - SvnHub
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
