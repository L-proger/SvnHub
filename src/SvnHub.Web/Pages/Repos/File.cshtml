@page "/repos/{repoName}/file"
@model SvnHub.Web.Pages.Repos.FileModel
@{
    ViewData["Title"] = $"{Model.RepoName} - {Model.Path}";
}

<div class="d-flex align-items-center justify-content-between flex-wrap gap-2">
    <h1 class="mb-0">@Model.RepoName</h1>
    @if (User?.IsInRole("Admin") ?? false)
    {
        <a class="btn btn-sm btn-outline-secondary" asp-page="/Repos/Settings" asp-route-repoName="@Model.RepoName">Settings</a>
    }
</div>
<div class="text-muted">r@(Model.Revision)</div>

<nav class="mt-2" aria-label="breadcrumb">
    <ol class="breadcrumb mb-0">
        @{
            var parts = Model.Path.Split('/', StringSplitOptions.RemoveEmptyEntries | StringSplitOptions.TrimEntries);
            var isRoot = parts.Length == 0;
            <li class="breadcrumb-item @(isRoot ? "active" : "")" @(isRoot ? "aria-current=\"page\"" : "")>
                @if (isRoot)
                {
                    @Model.RepoName
                }
                else
                {
                    <a asp-page="/Repos/Tree" asp-route-repoName="@Model.RepoName">@Model.RepoName</a>
                }
            </li>

            var current = "";
            for (var i = 0; i < parts.Length; i++)
            {
                current += "/" + parts[i];
                var isLast = i == parts.Length - 1;
                <li class="breadcrumb-item @(isLast ? "active" : "")" @(isLast ? "aria-current=\"page\"" : "")>
                    @if (isLast)
                    {
                        @parts[i]
                    }
                    else
                    {
                        <a asp-page="/Repos/Tree" asp-route-repoName="@Model.RepoName" asp-route-path="@current">@parts[i]</a>
                    }
                </li>
            }
        }
    </ol>
</nav>

@if (!string.IsNullOrWhiteSpace(Model.FlashError))
{
    <div class="alert alert-danger mt-3">@Model.FlashError</div>
}

@if (!string.IsNullOrWhiteSpace(Model.Error))
{
    <div class="alert alert-danger mt-3">@Model.Error</div>
}
else
{
    <div class="card file-viewer mt-3">
        <div class="card-header d-flex align-items-center justify-content-between gap-2 flex-wrap">
            <div class="text-muted small">
                @System.IO.Path.GetFileName(Model.Path)
            </div>
            <div class="d-flex align-items-center gap-2">
                @if (Model.CanEdit)
                {
                    <a class="btn btn-sm btn-outline-secondary"
                       asp-page="/Repos/Edit"
                       asp-route-repoName="@Model.RepoName"
                       asp-route-path="@Model.Path">Edit</a>
                }
                <a class="btn btn-sm btn-outline-secondary"
                   target="_blank"
                   rel="noopener"
                   asp-page="/Repos/File"
                   asp-page-handler="Raw"
                   asp-route-repoName="@Model.RepoName"
                   asp-route-path="@Model.Path">Raw</a>
                <a class="btn btn-sm btn-outline-secondary"
                   asp-page="/Repos/File"
                   asp-page-handler="Download"
                   asp-route-repoName="@Model.RepoName"
                   asp-route-path="@Model.Path">Download</a>
                @if (!string.IsNullOrWhiteSpace(Model.CheckoutUrl))
                {
                    <button type="button"
                            class="btn btn-sm btn-outline-secondary"
                            data-copy-text="@Model.CheckoutUrl"
                            data-copy-msg="#copyMsg">
                        Copy SVN URL
                    </button>
                }
                @if (Model.CanWrite)
                {
                    <form method="post" asp-page-handler="Delete" class="d-inline">
                        <input type="hidden" name="path" value="@Model.Path" />
                        <button type="submit"
                                class="btn btn-sm btn-outline-danger"
                                onclick="return confirm('Delete this file from SVN? This will create a new revision.');">
                            Delete
                        </button>
                    </form>
                }
                @if (!Model.IsImage)
                {
                    <button type="button"
                            class="btn btn-sm btn-outline-secondary"
                            data-copy-from="#copySrc"
                            data-copy-msg="#copyMsg">
                        Copy content
                    </button>
                }
                <span class="text-muted small" id="copyMsg"></span>
            </div>
        </div>
        <div class="card-body">
            @if (Model.IsImage)
            {
                <div class="text-center">
                    <img class="img-fluid border rounded d-inline-block"
                         alt="@Model.Path"
                         src="@Url.Page("/Repos/File", null, new { handler = "Raw", repoName = Model.RepoName, path = Model.Path }, null)" />
                </div>
            }
            else if (Model.IsMarkdown)
            {
                <div class="md">@Html.Raw(Model.MarkdownHtml)</div>
            }
            else
            {
                <pre class="mb-0"><code class="sh">@Html.Raw(Model.HighlightedHtml)</code></pre>
            }
        </div>
    </div>

    @if (Model.IsTruncated)
    {
        <div class="text-muted mt-2">Output truncated.</div>
    }
}

@if (!Model.IsImage)
{
    <textarea id="copySrc" style="position:fixed; left:-10000px; top:-10000px;">@Model.Contents</textarea>
}

@section Head
{
    <link rel="stylesheet" href="~/css/syntax.css" asp-append-version="true" />
    @if (Model.IsMarkdown)
    {
        <link rel="stylesheet" href="~/css/markdown.css" asp-append-version="true" />
    }
}

@section Scripts
{
    @* copy handlers live in wwwroot/js/site.js *@
}
